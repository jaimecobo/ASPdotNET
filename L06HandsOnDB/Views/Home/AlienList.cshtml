@model IEnumerable<L06HandsOnDB.Alien>

@{
    ViewData["Title"] = "AlienList";
}

<h1>AlienList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Arms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heads)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Legs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlanetOfOrigin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Arms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Heads)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Legs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlanetOfOrigin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

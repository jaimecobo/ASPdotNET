@{
    var prevDisable = !Model.PreviousPage ? "disable" : "";
    var nextDisable = !Model.NextPage ? "disable" : "";

    if(Model.PageIndex > 1){
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-default @prevDisable">
            Previous
        </a>
    }

    if(Model.PageIndex < Model.TotalPages){
